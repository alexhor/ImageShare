<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageShare.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20, 10">

            <Label
                x:Name="CurrentFolder"
                Text="Insert Nextcloud sharing link"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="32"
                HorizontalOptions="Start"
                />

            <Entry
                x:Name="NextcloudSharingLink"
                Placeholder="https://cloud.example.com/s/abc1234defg" />

            <Button
                Text="Open Folder"
                Clicked="Button_Clicked"
                Margin="0, 10"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
